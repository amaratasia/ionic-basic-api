<p id="notice"><%= notice %></p>

<h1>User Ingredients</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Ingredient</th>
      <th>Quanity</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user_ingredients.each do |user_ingredient| %>
      <tr>
        <td><%= user_ingredient.user_id %></td>
        <td><%= user_ingredient.ingredient %></td>
        <td><%= user_ingredient.quanity %></td>
        <td><%= link_to 'Show', user_ingredient %></td>
        <td><%= link_to 'Edit', edit_user_ingredient_path(user_ingredient) %></td>
        <td><%= link_to 'Destroy', user_ingredient, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

